<% unless controller_name == 'sessions' %>
  <p class="text-center mb-4">
    <%= link_to "Log in", new_session_path(resource_name), class: "text-blue-500 hover:underline" %>
  </p>
<% end %>

<% if devise_mapping.registerable? && controller_name != 'registrations' %>
  <p class="text-center mb-4">
    <%= link_to "Sign up", new_registration_path(resource_name), class: "text-blue-500" %>
  </p>
<% end %>

<% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <p class="text-center mb-4">
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-blue-500" %>
  </p>
<% end %>

<% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <p class="text-center mb-4">
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "text-blue-500 hover:underline" %>
  </p>
<% end %>

<% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <p class="text-center mb-4">
    <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "text-blue-500 hover:underline" %>
  </p>
<% end %>

<% if devise_mapping.omniauthable? %>
  <div class="text-center my-4">-------------- OR SIGN IN WITH --------------</div>
  <% resource_class.omniauth_providers.each do |provider| %>
    <p class="text-center mb-4">
      <%= link_to "Sign in with Google", omniauth_authorize_path(resource_name, provider), method: :post, class: "text-red-500 hover:underline" %>
    </p>
  <% end %>
<% end %>
