<div class="col-span-8 mx-auto w-[50%]">
  <p class="text-xl font-bold">
    <strong>Title : </strong>
    <%= @article.title %>
  </p>

  <p class="text-xl font-bold">
    <strong>Text : </strong>
    <%= @article.text %>
  </p>

  <div class="flex justify-stretch mt-4">
    <%= link_to 'Edit', edit_article_path, class: "inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded shadow-md w-[175px] text-center" %>
    <%= link_to 'Back', articles_path, class: "inline-block bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded shadow-md ml-2 w-[175px] text-center" %>
  </div>

  <hr class="my-4">

  <h4 class="text-lg font-bold">Comments</h4>

  <%= render @article.comments %>

  <hr class="my-4">

  <h4 class="text-lg font-bold">Add a comment:</h4>

  <%= render 'comments/form' %>
</div>
