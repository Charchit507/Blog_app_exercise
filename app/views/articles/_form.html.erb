<%= form_with model: @article, local: true do |form| %>

  <% if @article.errors.any? %>
    <div id="error_explanation" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
      <h2 class="text-red-800">
        <%= pluralize(@article.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :title, class: "w-full bg-gray-200 text-gray-800 border border-gray-300 rounded py-2 px-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" %>
  </div>

  <div class="mb-3">
    <%= form.label :text, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_area :text, class: "w-full bg-gray-200 text-gray-800 border border-gray-300 rounded py-2 px-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" %>
  </div>

  <div class="mb-6">
    <%= form.submit "Save Article", class: "bg-purple-500 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded shadow" %>
  </div>

<% end %>
