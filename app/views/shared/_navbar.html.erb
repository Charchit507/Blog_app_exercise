<% if current_user %>
  <nav class="bg-purple-600">
    <div class="container mx-auto px-4 py-2 flex justify-between items-center">
      <a href="/" class="text-white text-lg font-bold">Blog Application</a>
      <div class="flex items-center space-x-4">
        <span class="text-white"><%= current_user.full_name %></span>
        <span>
          <%= link_to 'Edit User', edit_user_registration_path, class: "inline-block bg-white text-purple-600 px-4 py-2 rounded-full shadow-md  hover:bg-purple-500 hover:text-white transition duration-300 ease-in-out" %>
        </span>
        <span>
          <%= link_to 'Sign out', destroy_user_session_path, data: { turbo_method: :delete }, class: "inline-block bg-white text-purple-600 px-4 py-2 rounded-full shadow-md hover:bg-purple-500 hover:text-white transition duration-300 ease-in-out" %>
        </span>
      </div>
    </div>
  </nav>
<% else %>
  <nav class="bg-purple-600">
    <div class="container mx-auto px-4 py-2 flex justify-between items-center">
      <a href="/" class="text-white text-lg font-bold">Blog Application</a>
      <div class="flex items-center space-x-4">
        <div class="nav-item">
          <%= link_to 'Sign up', new_user_registration_path, class: "inline-block bg-white text-purple-600 px-4 py-2 rounded-full shadow-md hover:bg-green-500 hover:text-white transition duration-300 ease-in-out" %>
        </div>
      </div>
    </div>
  </nav>
<% end %>
